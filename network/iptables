*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

# port 47171
#-A PREROUTING -i tun0 -p tcp --dport 47171 -j DNAT --to-destination 10.0.0.1:22

# wg0 is WAN interface, #enp3s0 is LAN interface
# comment out this to disable all non-VPN traffic
# -A POSTROUTING -o wg0 -j MASQUERADE

# wg0 is VPN interface
-A POSTROUTING -o wg0 -j MASQUERADE

COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]

# Service rules

# basic global accept rules - ICMP, loopback, traceroute, established all accepted
-A INPUT -s 127.0.0.0/8 -d 127.0.0.0/8 -i lo -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT

# enable traceroute rejections to get sent out
-A INPUT -p udp -m udp --dport 33434:33523 -j REJECT --reject-with icmp-port-unreachable

# VNC port - accept from LAN (enp3s0)
#-A INPUT -i enp3s0 -p tcp --dport 5900 -j ACCEPT

#PI-HOLE
-A INPUT -i enp3s0 -p tcp --dport 80 -j ACCEPT
-A INPUT -i enp3s0 -p tcp --dport 53 -j ACCEPT
-A INPUT -i enp3s0 -p udp --dport 53 -j ACCEPT
-A INPUT -i enp3s0 -p tcp --dport 67 -j ACCEPT
-A INPUT -i enp3s0 -p udp --dport 67 -j ACCEPT
-A INPUT -i lo -p tcp --dport 4711 -j ACCEPT

#nginx
-A INPUT -i enp3s0 -p tcp --dport 81 -j ACCEPT

#tor
-A INPUT -i lo -p tcp --dport 9050 -j ACCEPT
-A INPUT -i enp3s0 -p tcp --dport 9050 -j ACCEPT
-A INPUT -i wg0 -p tcp --dport 9050 -j ACCEPT

# SSH - accept from LAN (enp3s0) & VPN (wg0)
-A INPUT -i enp3s0 -p tcp --dport 22 -j ACCEPT
-A INPUT -i wg0 -p tcp --dport 22 -j ACCEPT

# DHCP client requests - accept from LAN (enp3s0)
-A INPUT -i enp3s0 -p udp --dport 67:68 -j ACCEPT

# SAMBA - accept from LAN (enp3s0)
-A INPUT -i enp3s0 -p udp --dport 137 -j ACCEPT
-A INPUT -i enp3s0 -p udp --dport 138 -j ACCEPT
-A INPUT -i enp3s0 -p tcp --dport 139 -j ACCEPT
-A INPUT -i enp3s0 -p tcp --dport 445 -j ACCEPT

# MINECRAFT
-A INPUT -i enp3s0 -p tcp --dport 25565 -j ACCEPT
-A INPUT -i enp3s0 -p udp --dport 25565 -j ACCEPT

# drop all other inbound traffic
-A INPUT -j DROP

# Forwarding rules

# forward packets along established/related connections
-A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT

#forward port 47171
-A FORWARD -i wg0 -p tcp -d 10.0.0.1 --dport 47171 -j ACCEPT

# forward from LAN (enp3s0) to WAN (wg0)
# comment out this to disable all non-VPN traffic
# -A FORWARD -i enp3s0 -o wg0 -j ACCEPT

# forward from LAN (enp3s0) to VPN (wg0)
-A FORWARD -i enp3s0 -o wg0 -j ACCEPT

# drop all other forwarded traffic
-A FORWARD -j DROP

COMMIT
